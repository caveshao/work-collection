.input-task {
  width: 100%;
  height: 90rpx;
  margin: 10rpx 0;
  border: 1px solid #F69581;
  color: #11c9ee;
}

zan-field {
  width: 90%;
}

zan-button {
  width: 100%;
  border-color: #F69581;
}

.label-box {
  display: flex;
  justify-content: space-around;
  align-items: flex-start;
  flex-wrap: wrap;
  flex-direction: row;
  width: 100%;
  margin-bottom: 20rpx;
}

.label {
  display: inline-block;
  width: 100%;
  background-color: #F69581;
  color: white;
  text-align: left;
  padding-left: 19rpx;
  margin-top: 10rpx;
}

zan-capsule {
  width: 100%;
}

.posttedTask,
.gettedTask {
  width: 100%;
}

.employee-info {
  width: 100%;
}

.employee-info zan-tag >view {
  width: 100%;
}